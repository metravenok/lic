# Web
APP_HOST=0.0.0.0
APP_PORT=8000
APP_ENV=dev

# JWT
JWT_SECRET=change-me-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=480

# Database (MariaDB/MySQL)
# For Docker Compose use the service name `db` for the host
DATABASE_URL=sqlite+aiosqlite:///./licensehub.db

# Active Directory / LDAP
AD_SERVER_URI=ldaps://dc01.domain.local:636
AD_BASE_DN=DC=domain,DC=local
# One of:
# - {username}
# - {username}@domain.local
# - DOMAIN\\{username}
AD_USER_DN_FORMAT={username}@domain.local
AD_USE_SSL=true
# Optional service account for searching
AD_SERVICE_ACCOUNT_DN=
AD_SERVICE_ACCOUNT_PASSWORD=

# UI
SITE_NAME=LicenseHub